# .env.example â€” environment overrides for WebScribe

# FastAPI binding
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=INFO

# Webhook
WEBHOOK_URL=https://your-webhook-endpoint.com/receive
WEBHOOK_SECRET=your_secret_key

# Airtable Integration
AIRTABLE_PERSONAL_ACCESS_TOKEN=your_airtable_personal_access_token
AIRTABLE_BASE_ID=your_airtable_base_id
AIRTABLE_TABLE_NAME=your_airtable_table_name

# Payload limits and timeouts
MAX_CONTENT_SIZE=10485760
TIMEOUT_SECONDS=30

# Debug mode? (True/False)
DEBUG=False

# CORS (comma-separated list, or * for any)
CORS_ALLOW_ORIGINS=*

# Virtual environment
VENV_NAME=parserVenv
